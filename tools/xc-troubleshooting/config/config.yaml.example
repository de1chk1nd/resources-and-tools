# =============================================================================
# F5 XC WAAP Troubleshooting Tool - Configuration (EXAMPLE)
# =============================================================================
# Copy this file to config.yaml and fill in your values.
# DO NOT commit config.yaml with real credentials to version control.
# =============================================================================

# F5 Distributed Cloud tenant settings
tenant:
  # Your tenant name (the part before .console.ves.volterra.io)
  # Example: "acmecorp"
  name: "acmecorp"


# Authentication
auth:
  # API Token generated from F5 XC Console
  # Navigate to: Administration -> Credentials -> API Credentials
  # Type: API Token
  api_token: "REPLACE_WITH_YOUR_API_TOKEN"

# Request lookup settings
request:
  # The request ID to search for (can also be passed via CLI --req-id)
  req_id: "abc12345-6789-def0-1234-567890abcdef"

  # Source IP to search for (can also be passed via CLI --src-ip)
  # You can use req_id, src_ip, fqdn, or any combination
  src_ip: ""

  # FQDN / hostname to filter by (can also be passed via CLI --fqdn)
  # Matches the "authority" field (e.g. "api.example.com")
  fqdn: ""

  # Namespace where the load balancer / security events reside
  namespace: "default"

  # Load balancer name (optional - narrows the search, can also be passed via CLI --load-balancer)
  # Matches the "vh_name" field using a regex contains match
  load_balancer: "my-app-lb"

  # Time window to search (in hours, from now backwards)
  # Default: 24 hours
  search_window_hours: 24

# Report output settings
report:
  # Output directory for generated reports
  output_dir: "reports"

  # Report format: "markdown" (default), "html", "json", or "all" (md+html)
  format: "markdown"

